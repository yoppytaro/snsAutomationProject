<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/users/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @password %>">
          <div class="btn-area">          
            <input type="submit" value="ログイン">
            <a href="/users/signup">会員登録する</a>
            <a href="/users/signup">パスワードを忘れた方はこちら</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
