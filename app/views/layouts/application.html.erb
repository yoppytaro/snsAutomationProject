<!DOCTYPE html>
<html>
  <head>
    <title>Instagramruby</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="header-logo">
          <%= link_to image_tag("SNSBOT.png"), "/" %>
        </div>
          <ul class="header-menus">
            <% if @current_user %>
              <li>
                <%= link_to("ログアウト", "/users/logout", {method: :post}) %>
              </li>
            <% else %>
              <li>
                <%= link_to("新規登録", "/users/signup") %>
              </li>
              <li>
                <%= link_to("ログイン", "/users/login") %>
              </li>
            <% end %>
          </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
    <footer>
      <%= image_tag 'SNSBOT.png' %>
    </footer>
  </body>
</html>
